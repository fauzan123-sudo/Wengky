<!--            android:textSize="12sp" />-->
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/background_dashboard"
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fauzan"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/acme"
                android:textSize="18sp"
                android:textColor="@color/Dark_text"
                />

            <TextView
                android:id="@+id/jabatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backend Android"
                android:textAlignment="center"
                android:textColor="#A3A3A3"
                android:textSize="13sp"
                android:textStyle="bold"
                />

            <TableLayout
                android:id="@+id/tab"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:stretchColumns="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Username"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/username"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="fauzangg"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Email"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/email"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="fauzangg@gmail.com"
                        android:gravity="right"
                        android:padding="3dip" />

                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:text="NIP"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/nip"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="256199"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Tempat Lahir"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tempat_lhr"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="Nganjuk"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tab2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:stretchColumns="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Tanggal Lahir"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/tgl_lahir"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="23 Mei 1997"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_column="1"
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:text="Telepon"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/no_tlp"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="085608727991"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Alamat"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/alamat"
                        android:fontFamily="@font/arial"
                        android:textColor="#37474F"
                        android:text="Gondang-Nganjuk"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:id="@+id/profile_image3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-40dp"
        android:src="@drawable/profil_circle" />


    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:background="@drawable/circle_red_button"
        android:layout_margin="20dp"
        android:layout_above="@+id/kelolaAkun"
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluar"
        />

    <Button
        android:enabled="false"
        android:visibility="invisible"
        android:id="@+id/kelolaAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kelola Akun"
        android:background="@color/red_font"
        android:layout_margin="20dp"
        android:layout_above="@+id/pemberitahuan"
        />
    <TextView
        android:id="@+id/pemberitahuan"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F83255"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="5dp"
        android:text="Jika ada data yang tidak sesuai dengan data diri anda, silahkan hubungi Admin.Terima Kasih"
        />

</RelativeLayout>