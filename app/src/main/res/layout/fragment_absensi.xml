<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/layout_coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ui.fragment.Absensi"
    android:background="@color/dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/background_dashboard"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Absensi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TableLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#C1F2CF"
                        app:cardCornerRadius="18dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_column="1">
                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/roboto_bold"
                                android:id="@+id/hadir"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:backgroundTint="#FFBCC8"
                        app:cardCornerRadius="18dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:layout_column="2" >
                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/alpa"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="20dp"
                        android:backgroundTint="#B8DCFA"
                        app:cardCornerRadius="18dp"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_column="3" >
                        <LinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/izin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:fontFamily="@font/roboto_bold"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Hadir"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Alpa"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_marginStart="20dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Izin"
                        android:textSize="10sp"
                        />
                </TableRow>
            </TableLayout>
            <RelativeLayout

                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Riwayat Absen"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <TextView
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/ajukanIzin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/arrow_right"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/arialbd"
                    android:text="Ajukan Izin"
                    android:textColor="@color/red_font"
                    android:textSize="12sp" />
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/arrow_right"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/ic_arrow_right"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentEnd="true"
                    />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/item_absensi"
                android:id="@+id/rec">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:visibility="invisible"
                android:fontFamily="@font/arial"
                android:layout_marginTop="100dp"
                android:id="@+id/inHide"
                android:textSize="10sp"
                android:textAlignment="center"
                android:textColor="#4B000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum ada data"
                />
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:background="@drawable/background_dashboard"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:elevation="0dp"
                app:cardCornerRadius="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#C4C4C4"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="Formulir izin"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TableLayout
                android:stretchColumns="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Jenis Izin"
                        android:layout_gravity="center_vertical"
                        android:padding="3dip" />
                    <Spinner
                        android:layout_gravity="center_vertical"
                        android:id="@+id/jenis_izin"
                        android:fontFamily="@font/roboto_bold"
                        tools:listitem="@layout/spinner_izin"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Pilih Waktu"
                        android:padding="3dip" />
                    <RadioGroup
                        android:id="@+id/Radio_Group"
                        android:orientation="horizontal">
                        <RadioButton
                            android:visibility="invisible"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/rbJamw"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:buttonTint="@color/black"
                            android:text="Jam"/>
                        <RadioButton
                            android:checked="false"
                            android:textColor="@color/black"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/rbJam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/black"
                            android:text="Jam"/>
                        <RadioButton
                            android:checked="false"
                            android:id="@+id/rbHari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari"
                            android:buttonTint="@color/black"
                            android:textColor="@color/black"
                            />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Dari"
                        android:padding="3dip" />
                    <TextView
                        android:enabled="false"
                        android:id="@+id/dari"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="07.00"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Sampai"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/sampai"
                        android:background="@color/white"
                        android:enabled="false"
                        android:fontFamily="@font/roboto_bold"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:text="14.00"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <TableRow
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:fontFamily="@font/arial"
                        android:textSize="12sp"
                        android:textColor="#A3A3A3"
                        android:layout_column="1"
                        android:text="Alasan"
                        android:padding="3dip" />
                    <EditText
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:background="@color/white"
                        android:id="@+id/alasan"
                        android:fontFamily="@font/roboto_bold"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:hint="....."
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
                <androidx.appcompat.widget.AppCompatButton
                    android:imeOptions="actionDone"
                    android:id="@+id/kirimDataIzin"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kirim"
                    android:background="@drawable/circle_red_button"
                    />
            </TableLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>